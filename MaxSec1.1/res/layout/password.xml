<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/fondo_password">
   <EditText
       android:id="@+id/editText1"
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       android:layout_alignParentTop="true"
       android:layout_marginTop="20dp"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"
       android:ems="10"
       android:inputType="textPassword"
       android:enabled="false"
       android:textSize="25dp"
       android:gravity="center">
       <requestFocus />
   </EditText>
    
    <Button
        android:layout_marginLeft="9dp"
        android:id="@+id/button_1"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:text="1"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_2"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/button_1"
        android:text="2"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_3"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/button_2"
       android:text="3"
        android:textSize="25dp"
        android:gravity="center" >
   </Button>
    <Button
       android:layout_marginLeft="9dp"
        android:id="@+id/button_4"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_1"
        android:text="4"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
    <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_5"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_2"
         android:layout_toRightOf="@+id/button_4"
        android:text="5"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_6"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_3"
         android:layout_toRightOf="@+id/button_5"
         android:text="6"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
    <Button
       android:layout_marginLeft="9dp"
        android:id="@+id/button_7"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_4"
        android:text="7"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
    <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_8"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_5"
         android:layout_toRightOf="@+id/button_7"
        android:text="8"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_9"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_6"
         android:layout_toRightOf="@+id/button_8"
       android:text="9"
        android:textSize="25dp"
        android:gravity="center" >
   </Button>
   
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_0"
        android:layout_width="96dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_8"
        android:layout_toRightOf="@+id/button_7"
        android:text="0"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="9dp"
        android:id="@+id/button_aceptar"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_0"
        android:text="aceptar"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_cancelar"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/button_0"
        android:layout_toRightOf="@+id/button_aceptar"
        android:text="cancelar"
        android:textSize="25dp"
        android:gravity="center">
   </Button>

   

</RelativeLayout>