<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/options_xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo" >
    
    <TextView
        android:id="@+id/title_label2"
        android:text="GENERAL CONFIGURATIONS"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:gravity="center"
        android:width="100dp"
        android:textColor="#FFFFFF">
    </TextView>
    
    
    <TextView
        android:id="@+id/mail_label"
        android:text="Mail"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/title_label2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        android:gravity="center"
        android:width="100dp"
        android:textColor="#FFFFFF">
    </TextView>

    <EditText
        android:id="@+id/mail_text2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/title_label2"
        android:layout_toRightOf="@+id/mail_label"
        >
     </EditText>
     
    <TextView
        android:id="@+id/password_label"
        android:text="Old Password"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/mail_text2"
        android:textSize="15dp"
        android:gravity="center"
        android:width="100dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp">
    </TextView>
    
    <EditText
        android:id="@+id/password_text_old"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/mail_text2"
        android:layout_toRightOf="@+id/password_label"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="17dp"
         >
     </EditText>
     
    <TextView
        android:id="@+id/sound_label"
        android:text="New Password"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_text_old"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp">
        
    </TextView>
    
    <EditText
        android:id="@+id/password_text_new"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_below="@+id/password_text_old"
        android:layout_toRightOf="@+id/password_label"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="17dp"
        >
     </EditText>
     
     <TextView
        android:id="@+id/label_espacio"
        android:text=""
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        android:width="100dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/sound_label">
    </TextView>
    
     <TextView
        android:id="@+id/subtitle_label"
        android:text="STATE APLICATION"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:gravity="center"
        android:width="100dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/label_espacio">
    </TextView>
    
    <Button
       android:layout_marginLeft="9dp"
        android:id="@+id/button_aceptar2"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/subtitle_label"
        android:text="Aceptar"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
   <Button
       android:layout_marginLeft="6dp"
        android:id="@+id/button_cancelar2"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/subtitle_label"
        android:layout_toRightOf="@+id/button_aceptar2"
        android:text="Cancelar"
        android:textSize="25dp"
        android:gravity="center">
   </Button>
    

</RelativeLayout>